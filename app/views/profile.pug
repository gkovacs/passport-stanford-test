extends layout

block content
  h1 Profile

  dl
    dt Display name
    dd= user.displayName
    dt Email
    dd= user.mail
    dt Affiliations
    dd 
      ul
        each affil in user.eduPersonAffiliation.sort()
          li= affil
    dd
    dt Groups
    dd
      ul
        each group in user.eduPersonEntitlement.sort()
          li= group

  a(href="/logout") Logout